<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
		    name="mindist"
		    type="number"
		    label="COM_JTG_DISTANCE"
		    hint="COM_JTG_MIN_DISTANCE"
		    onchange="this.form.submit();"
		/>
		<field
		    name="maxdist"
		    type="number"
		    label="COM_JTG_DISTANCE"
		    hint="COM_JTG_MAX_DISTANCE"
		    onchange="this.form.submit()"
		/>
		<field
            name="tracklevel"
            type="tracklevel"
            onchange="this.form.submit()"
		/>
		<field
			name="tag"
			type="tag"
         label="JTAG"
         description="JTAG_DESC"
         mode="ajax"
         multiple="true"
         class="inputbox span12 small"
         custom="deny"
			onchange="this.form.submit()"
		/>
		<field
			name="trackcat"
		 	type="trackcategory"
			multiple="multiple"
			onchange="this.form.submit()"
		/>
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
