<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_JTG_MENU_DEFAULT_LAYOUT">
		<message>
			<![CDATA[COM_JTG_DEFAULT_LAYOUT_DESCRIPTION]]>
		</message>
	</layout>
	<fields name="request">
	    <fieldset name="request">
	        <field
	            name="cat"
                type="sql"
                label="COM_JTG_CAT"
                description="COM_JTG_CAT"
                header="COM_JTG_CAT_SELECT"
	            sql_select="id,title"
                sql_from="#__jtg_cats"
                sql_where="published=1"
                key_field="id"
                value_field="title"
                translate="true"
				/>
				<field name="introtext"
					type="checkbox"
					checked="1"
					label="COM_JTG_SHOW_WELCOME"
					description="COM_JTG_SHOW_WELCOME_DESC"
				/>
				<field name="geoloc"
					type="checkbox"
					label="COM_JTG_CENTER_GEOLOC"
					description="COM_JTG_CENTER_GEOLOC_DESC"
				/>
				<field name="lon"
					type="float"
					label="COM_JTG_LON"
				/>
				<field name="lat"
					type="float"
					label="COM_JTG_LAT"
				/>
				<field name="map_zoom"
					type="number" min="0" max="28"
					label="COM_JTG_ZOOM_LEVEL" 
				/>
       </fieldset>
    </fields>

</metadata>
